Bootstrap: docker
From: nvidia/cuda:12.8.0-cudnn-devel-ubuntu24.04

%environment
    export DEBIAN_FRONTEND=noninteractive
    export PATH="/usr/local/cuda/bin:${PATH}"
    export LD_LIBRARY_PATH="/usr/local/cuda/lib64:${LD_LIBRARY_PATH}"

%files
    LegoGearsFiles/script.sh /usr/local/bin/script.sh
    LegoGearsFiles/run.py    /workspace/run.py
    LegoGearsFiles/train_setup.py    /workspace/train_setup.py

%post
    # Update package list and install dependencies
    apt-get update && apt-get install -y build-essential git libopencv-dev file cmake python3-pip
    # Install Python packages
    pip install --break-system-packages cloudmesh-common
    pip install --break-system-packages cloudmesh-gpu
    # Create the working directory (for non-bound scenarios)
    mkdir -p /workspace
    # Make the script executable
    chmod +x /usr/local/bin/script.sh

%runscript
    /usr/local/bin/script.sh
    cd /host_workspace/darknet/build/src-cli
    ls
    ./darknet version && python3 /workspace/run.py && exec /bin/bash

